@using Microsoft.AspNetCore.Components
<div>
    <div class="card">
        <div class="row g-0">
            <div class="col-3">
                <img src="images/icons/banks/bunq-logo-rounded.png" class="img-fluid p-2" alt="bunq_logo">
            </div>
            <div class="col-1 d-flex align-items-center">
                <span class="material-symbols-outlined md-48 @ColorClass">@IconType</span>
            </div>
            <div class="col-5 d-flex align-items-center">
                <div class="card-body">
                    <p class="card-text">@CardText</p>
                    <button class="btn btn-outline-success" @onclick="OnButtonClick">@ButtonText</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool Linked { get; set; }

    [Parameter]
    public EventCallback OnButtonClick { get; set; }
    
    private string ColorClass => Linked ? "success" : "danger";
    private string IconType => Linked ? "link" : "link_off";
    private string CardText => $"Bunq is {(Linked ? "" : "not")} connected";
    private string ButtonText => Linked ? "Disconnect" : "Connect";
}